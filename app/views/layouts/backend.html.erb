<!DOCTYPE html>
<html>
  <head>
    <title>归去来兮</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="content">
      <div class="header">
        <%= render 'layouts/common/navbar', profile: true %>
        <%= render 'layouts/common/flash' %>
      </div>

      <div class="content-fluid">
        <div class="row flex-xl-nowrap">
          <div class="col-md-2 border-right">
            <%= render 'layouts/common/sidebar' %>
          </div>
          <div class="col p-3">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'layouts/common/footer' %>

  </body>
</html>

<h2><%=I18n.t 'pages.show', model: h(QinPoetry), scope: :views %></h2>
<div class="container">
  <div class="row my-3">
    <div class="col-md-8 offset-md-2 d-flex flex-column align-items-center">
      <h1 class="text-success"><%= @qin_poetry.title %></h1>
      <br>
      <div class="text-muted"><%= @qin_poetry.dynasty %> - <%= @qin_poetry.author %></div>
      <br>
      <div class="font-weight-normal">
      <% @qin_poetry.content.each do |line| %>
        <p class="poem-body"><%= line %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>

<h2 class="category"><%= h Work, :notes %></h2>
<div class="mx-5">
  <% if @qin_poetry.notes.empty? %>
    <h5 class="font-weight-normal">暂无, <%= link_to '我来补充', [ :edit, :backend, @qin_poetry ] %></h5>
  <% else %>
    <ul class="list-group list-group-flush">
      <% @qin_poetry.notes.each do |line| %>
        <li class="list-group-item"><%= line %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<h2 class="category"><%= h Work, :translate %></h2>
<div class="mx-5">
  <% if @qin_poetry.translate.empty? %>
    <h5 class="font-weight-normal">暂无, <%= link_to '我来补充', [ :edit, :backend, @qin_poetry ] %></h5>
  <% else %>
    <% @qin_poetry.translate.each do |line| %>
      <p><%= line %></p>
    <% end %>
  <% end %>
</div>

<% if @qin_poetry.translate_res.present? %>
  <h2 class="category"><%= h Work, :translate_res %></h2>
  <div class="mx-5">
    <% @qin_poetry.translate_res.each do |line| %>
      <div class="small text-muted"><%= line %></div>
    <% end %>
  </div>
<% end %>

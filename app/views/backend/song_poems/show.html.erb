<div class="d-flex justify-content-between align-items-baseline">
  <h2><%=I18n.t 'pages.show', model: h(SongPoem), scope: :views %></h2>
  <div class="mr-3">
    <%= link_to '编辑', [ :edit, :backend, @song_poem ] %>
  </div>
</div>
<hr>
<br>
<div class="container">
  <div class="row my-3">
    <div class="col-md-8 offset-md-2 d-flex flex-column align-items-center">
      <h1 class="text-success"><%= @song_poem.title %></h1>
      <br>
      <div class="text-muted"><%= @song_poem.dynasty %> - <%= @song_poem.author %></div>
      <br>
      <% if @song_poem.prelude.present? %>
        <div class="mx-5"><%= @song_poem.prelude %></div>
        <br>
      <% end %>
      <div class="font-weight-normal">
      <% @song_poem.content.each do |line| %>
        <p class="poem-body"><%= line %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>

<h2 class="category"><%= h Work, :notes %></h2>
<div class="mx-5">
  <% if @song_poem.notes.empty? %>
    <h5 class="font-weight-normal">暂无, <%= link_to '我来补充', [ :edit, :backend, @song_poem ] %></h5>
  <% else %>
    <% @song_poem.notes.each do |line| %>
      <p><%= line %></p>
    <% end %>
  <% end %>
</div>

<h2 class="category"><%= h Work, :translate %></h2>
<div class="mx-5">
  <% if @song_poem.translate.empty? %>
    <h5 class="font-weight-normal">暂无, <%= link_to '我来补充', [ :edit, :backend, @song_poem ] %></h5>
  <% else %>
    <% @song_poem.translate.each do |line| %>
      <p><%= line %></p>
    <% end %>
  <% end %>
</div>

<% if @song_poem.translate_res.present? %>
  <h2 class="category"><%= h Work, :translate_res %></h2>
  <div class="mx-5">
    <% @song_poem.translate_res.each do |line| %>
      <div class="small text-muted"><%= line %></div>
    <% end %>
  </div>
<% end %>

<h2>个人中心</h2>

<div class="row">
  <div class="col-lg-8 offset-md-2">
    <%= simple_form_for [ :backend, @user ] do |f| %>
    <%= f.input :nickname %>
    <%= f.input :email, readonly: true %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <%= f.submit '更新个人资料', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

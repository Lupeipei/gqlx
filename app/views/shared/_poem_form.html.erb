<div class="row">
  <div class="col-lg-8 offset-md-2">
    <%= simple_form_for [ :backend, poem ] do |f| %>
    <%= f.input :title %>
    <%= f.input :dynasty %>
    <%= f.input :author %>
    <%= f.input :prelude %>
    <%= f.input :content %>
    <%= f.input :notes %>
    <%= f.input :translate %>
    <%= f.input :translate_res %>

    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

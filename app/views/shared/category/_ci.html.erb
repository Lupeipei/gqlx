<div class="container-fluid">
  <div class="row mx-3">
    <% poems.each do |poem| %>
      <div class="col-4 my-3">
        <div class="poems text-center">
          <div class="card card-body border-0">
            <%= link_to poem.title, work_url(poem.id), class: "card-title text-success h5" %>
            <small class="card-subtitle mb-2 text-muted"><%= poem.dynasty %> - <%= poem.author %></small>
            <div class="card-text">
              <% if poem.content.size > 4 %>
                <% poem.content.first(3).each do |line| %>
                  <p><%= line %></p>
                <% end %>
                <p>.........</p>
              <% else %>
                <% poem.content.each do |line| %>
                  <p><%= line %></p>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-end my-2">
            <i class="far fa-heart fa-lg text-muted mr-3"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>